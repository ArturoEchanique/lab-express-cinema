<div class="soloMovieMain">
    <div class="soloMovieleft">
        <img src="{{image}}" alt="">
    </div>
    <div class="soloMovieRight">
        <a href="/movies/">Go back</a>
        <h2>{{title}}</h2>
        <h3>{{director}}</h3>
        <h4>Stars</h4>
        <ul>
            {{#each stars}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
        <p>{{description}}</p>

        {{#each showtimes}}
        {{this}} ||
        {{/each}}
    </div>
</div>